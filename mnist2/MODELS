- name: mnist-base
  private: yes
  operations:
    train:
      description: Train the MNIST model
      cmd: '{{cmd_mod}} --datadir data --rundir .'
      flags:
        batch-size:
          description: Number of images to include in a training batch
          default: 100
        epochs:
          description: Number of epochs to train
          default: 10
      requires: mnist:data
    evaluate:
      description: Evaluate a trained model using test data
      cmd: '{{cmd_mod}} --test --datadir data --rundir .'
      requires:
        - model
        - mnist:data
  resources:
    model:
      description: Exported intro model
      sources:
      - operation: train
        select: model

- name: mnist-intro-todo
  private: yes
  description: MNIST model from TensorFlow intro tutorial
  extends: mnist-base
  params:
    cmd_mod: intro

- name: mnist-expert-todo
  private: yes
  description: MNIST model from TensorFlow expert tutorial
  extends: mnist-base
  params:
    cmd_mod: expert
  operations:
    train:
      flags:
        epochs: 5

- name: mnist-intro
  description: MNIST model from TensorFlow intro tutorial
  operations:
